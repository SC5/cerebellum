{
  "name": "cerebellum",
  "version": "0.2.0",
  "description": "Controls your isomorphic apps",
  "scripts": {
    "test_build": "browserify -u underscore -u jquery -s Cerebellum index.js -o test/client/cerebellum_test_build.js",
    "test": "npm run test_server && npm run test_client",
    "test_server": "mocha test/server",
    "test_client": "npm run test_build && mocha-phantomjs -s loadImages=false http://localhost:8000/",
    "start": "http-server test/client -p 8000"
  },
  "author": "Lari Hoppula",
  "license": "ISC",
  "devDependencies": {
    "browserify": "^6.0.2",
    "http-server": "^0.7.1",
    "mocha": "^1.21.4",
    "mocha-phantomjs": "^3.5.0",
    "phantomjs": "^1.9.10",
    "should": "^4.0.4",
    "supertest": "^0.14.0"
  },
  "dependencies": {
    "axios": "^0.3.1",
    "cheerio": "^0.17.0",
    "director": "^1.2.3",
    "exoskeleton": "paulmillr/exoskeleton",
    "express": "^4.9.4",
    "native-promise-only": "^0.7.6-a",
    "path-to-regexp": "^1.0.1"
  },
  "main": "index.js",
  "browser": {
    "./lib/server": false
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/SC5/cerebellum"
  }
}
